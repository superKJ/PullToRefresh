<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_my_height"
    android:background="@drawable/selector_item_white_grey"
    android:clickable="true">

    <!-- 左边的文字 -->
    <TextView
        android:id="@+id/tv_left_title"
        android:layout_marginRight="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dip"
        android:layout_toRightOf="@+id/iv_left_icon"
        android:textColor="@color/color_474747"
        android:textSize="14sp" />


    <!-- 右边的文字 -->
    <EditText
        android:id="@+id/et_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:layout_marginLeft="83dip"
        android:textColorHint="#bbbbbb"
        android:textColor="@color/color_474747"
        android:textSize="14sp" />
</RelativeLayout>
